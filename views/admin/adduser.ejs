<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <!-- icon link -->
          <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
            integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
            crossorigin="anonymous" referrerpolicy="no-referrer" />
          <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <!-- information css -->
    <link rel="stylesheet" href="../css/adduser.css">
    <!-- link admin.css -->
    <link rel="stylesheet" href="../css/admin.css">
    <title>Shotter-Shondhane Users</title>
    <style>
        .adminactive{
  width: 0%;
  transition: 0.3s;
}
.adminacright{
  width: 100%;
  transition: 0.3s;
}
  </style>
</head>
<body>
    <div class="admin">
        <div class="admin-left">
           <%-include("../partials/amleft")%>
            <!-- menu -->
        </div>
        <div class="admin-right">
           <!-- top header -->
           <%-include("../partials/amheader.ejs")%>
        <!-- add user -->
       <div class="user-showsec">
        
        <div class="user-add">
            <h1>Add User</h1>
           <form action="/admin/adduser"method="POST"enctype="multipart/form-data"onsubmit="return submitform()">
            <input type="text"placeholder="Username"name="name"id="name"required><br>
            <input type="email"placeholder="Email"name="email"id="email"required><br>
            <input type="number"placeholder="Number"name="mobile"id="mobile"required><br>
            <input type="number"placeholder="Member Code"name="memberid"id="memberid"required><br>
            <div class="user-file">
              <img src="../images/image.png" alt="">
                <label for="text">Upload Image</label>
                <input type="file"name="userimage">
            </div>
              <%if(typeof message !=="undefined" ){%>
                <p id="updatetext">
                  <%=message%>
                </p>
                <%}%>
                    <p id="settext" style="margin-top:10px;color:red"></p>
            <button>Add <i class='bx bxs-right-arrow-square'></i></button>
        </form>
          </div>

        </div>
        <!-- add user -->
        </div>
    </div>


    <script src="../js/sidebar.js"></script>
    <script>
      var name=document.getElementById("name");
      var mobile = document.getElementById("mobile");
        var email = document.getElementById("email");
        var memberid = document.getElementById("memberid");
        var settext=document.getElementById("settext")
      function submitform(){
        if (memberid.value.length <= 4) {
          memberid.style.border = "2px solid red";
          settext.innerHTML = "Member Code should be 5 character"
          return false;
        }
        else if (memberid.value.length > 5) {
          memberid.style.border = "2px solid red";
          settext.innerHTML = "Member Code should be 5 character"
          return false;
        }
        else if (mobile.value.length > 11) {
          mobile.style.border = "2px solid red";
          settext.innerHTML = "Mobile Number should be 11 character"
          return false;
        } else if (mobile.value.length < 11) {
          mobile.style.border = "2px solid red";
          settext.innerHTML = "Mobile Number should be 11 character"
          return false;
        }
      }
    </script>
</body>
</html>