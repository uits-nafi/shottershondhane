<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- icon link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

    <!-- link admin.css -->
    <link rel="stylesheet" href="./css/admin.css">
    <title>Shotter-Shondhane Admin</title>
    <style>
        .adminactive {
            width: 0%;
            transition: 0.3s;
        }

        .adminacright {
            width: 100%;
            transition: 0.3s;
        }
    </style>
</head>

<body>
    <div class="admin">
        <div class="admin-left">
            <%-include("../partials/acleft")%>
                <!-- menu -->
        </div>
        <div class="admin-right">
            <!-- top header -->
            <%-include("../partials/acheader.ejs")%>
                <div class="all-info-show">
                    <div class="userinfo-main">
                        <div class="userinfobox">
                            <img src="./images/group.png" alt="users">
                            <div class="usertext">
                                <h2>Total Users</h2>
                                <p>122300</p>
                            </div>
                        </div>

                        <div class="userinfobox">
                            <img src="./images/audience.png" alt="users">
                            <div class="usertext">
                                <h2>Total Audiance</h2>
                                <p>122300</p>
                            </div>
                        </div>

                        <div class="userinfobox">
                            <img src="./images/profits.png" alt="users">
                            <div class="usertext">
                                <h2>Total Collections</h2>
                                <p>122300</p>
                            </div>
                        </div>

                        <div class="userinfobox">
                            <img src="./images/spending.png" alt="users">
                            <div class="usertext">
                                <h2>Total Expenses</h2>
                                <p>122300</p>
                            </div>
                        </div>

                    </div>
                    <!-- chart show -->
                    <div class="chart">
                        <h2>Monthly Collections Chart</h2>
                        <canvas id="myChart"></canvas>
                    </div>
                    <div class="chart">
                        <h2>Monthly Expenses Chart</h2>
                        <canvas id="myChart2"></canvas>
                    </div>

                    <!-- chart show -->

                </div>
        </div>
    </div>
    <!-- chart.js link -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="../js/sidebar.js"></script>
    <script>
        const ctx = document.getElementById('myChart');
        const ctx2 = document.getElementById('myChart2');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    borderWidth: 1,
                    backgroundColor: "#2bcbba"
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
        new Chart(ctx2, {
            type: 'bar',
            data: {
                labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
                datasets: [{
                    label: '# of Votes',
                    data: [12, 19, 3, 5, 2, 3],
                    borderWidth: 1,
                    backgroundColor: "#4b7bec"
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>

</html>